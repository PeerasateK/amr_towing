    <joint type="continuous" name="joint_left_wheel">
        <origin rpy="0 0 0" xyz="0 0.38 -0.11"/>
        <child link="left_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="joint_right_wheel">
        <origin rpy="0 0 0" xyz="0 -0.38 -0.11"/>
        <child link="right_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- <joint type="continuous" name="joint_hook">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <child link="hook"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint> -->

    <joint type="revolute" name="joint_towing">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <child link="hook"/>
            <parent link="chassis"/>
            <axis rpy="0 0 0" xyz="0 0 1"/>
            <limit effort="10000" velocity="1000" lower="-1.5707" upper="1.5707"/>
            <joint_properties damping="1.0" friction="1.0"/>
        </joint>

    <joint type="fixed" name="joint_hook">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <child link="cart"/>
        <parent link="hook"/>
        <axis rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <joint type="continuous" name="joint_left_cart_wheel">
        <origin rpy="0 0 0" xyz="-1.4 0.38 -0.11"/>
        <child link="left_cart_wheel"/>
        <parent link="cart"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="joint_right_cart_wheel">
        <origin rpy="0 0 0" xyz="-1.4 -0.38 -0.11"/>
        <child link="right_cart_wheel"/>
        <parent link="cart"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint> 

    <transmission name="towing_tran">
        <type>transmission_interface/SimpleTransmission</type>
        <joint type="revolute" name="joint_towing">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_towing">
            <!-- <hardwareInterface>EffortJointInterface</hardwareInterface> -->
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
</robot>