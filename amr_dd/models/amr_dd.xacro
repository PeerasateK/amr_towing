            </geometry>
        </collision>
        <visual name="left_cart_wheel_visual">
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.08"/>
            </geometry>
